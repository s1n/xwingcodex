doctype html
html.no-js(lang='')
  head
    meta(charset='utf-8')
    meta(name='description', content='')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title ${layout.brand}
    link(rel='apple-touch-icon', href='apple-touch-icon.png')
    // Place favicon.ico in the root directory

    // external resource links, keep this to a minimum, only for cases where it is a pain to keep local
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/2.8.0/css/flag-icon.min.css')

    link(rel="stylesheet" href="/xwingcodex/styles/main.css")
  body
    <!--[if lt IE 10]>
      p.browserupgrade You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.
    <![endif]-->

    #navigation.navbar.navbar-default.navbar-inverse.navbar-fixed-top(role='navigation')
      .container
        .navbar-header.navbar-left
          a.navbar-brand(href='/${layout.lang}/index.html') ${layout.brand}
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-menubuilder')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        .collapse.navbar-collapse.navbar-menubuilder
          ul.nav.navbar-nav.navbar-right
            li.dropdown
              a(href='#', data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false").dropdown-toggle
                | ${layout.official}
                b.caret
              ul.dropdown-menu
                li
                  a(href="/xwingcodex/${layout.lang}/official/learntoplay.html") ${layout.learntoplay}
                li
                  a(href="/xwingcodex/${layout.lang}/official/rrg.html") ${layout.rrg}
                li
                  a(href="/xwingcodex/${layout.lang}/official/faq.html") ${layout.faq}
                li
                  a(href="/xwingcodex/${layout.lang}/official/regs.html") ${layout.regs}
                li
                  a(href="/xwingcodex/${layout.lang}/official/epic.html") ${layout.epic}
                li
                  a(href="/xwingcodex/${layout.lang}/official/other.html") ${layout.other}
                li
                  a(href="/xwingcodex/${layout.lang}/official/changes.html") ${layout.changes}
            li
              a(href="/xwingcodex/${layout.lang}/unofficial/codex.html") ${layout.codex}
            li.dropdown
              a(href='#', data-toggle="dropdown", role="button", aria-haspopup="true", aria-expanded="false").dropdown-toggle
                span(style="margin-right: 5px" class="${layout.flag}")
                nbsp
                | ${layout.language}
                b.caret
              ul.dropdown-menu
                li
                  a(href="/xwingcodex/en/index.html")
                    span(style="margin-right: 5px").flag-icon.flag-icon-us
                    nbsp
                    | ${layout.english}
                li
                  a(href="/xwingcodex/de/index.html")
                    span(style="margin-right: 5px").flag-icon.flag-icon-de
                    nbsp
                    | ${layout.german}

    block content

    .container.footer
      p ${layout.broughtby}

